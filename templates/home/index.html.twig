{% extends 'layout.html.twig' %}

{% block title %}
    {{ parent() }} - Accueil
    
{% endblock %}

{% block content %}

<h1>Dernier article publié</h1>

<div class="row mt-5 justify-content-center text-center">
  <div>
    <h3>{{ dernierArticle.titre }}</h3>
    <h6 class="text-muted">publié le : {{ dernierArticle.dateDeCreation | date("d/m/Y \à H\\hi") }}</h6>
    {% if dernierArticle.dateDeModification is not null %}
      <h6 class="text-muted">modifié le : {{ derneirArticle.dateDeModification | date ("d/m/Y \à H\\hi")}}</h6>
    {% endif %}

    <h6>auteur de l'article</h6>
    <p>{{ dernierArticle.contenu | slice(0, 150) }} .... <a href="">lire la suite</p>
  </div>
</div>
{% endblock content %}

